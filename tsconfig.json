{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": ["./src", "./tests/**/*.ts", "./tests/intergration/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
